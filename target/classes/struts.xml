<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
	
<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.custom.i18n.resources" value="ApplicationResource" />
	
	<package name="default" extends="struts-default" namespace="/">
	
		<action name="login" method="authenticate" class="br.com.age.challenge.struts.actions.LoginAction">
			<result name="success">/create.jsp</result>
			<result name="error">/login.jsp</result>
		</action>
		
		<action name="create" method="execute" class="br.com.age.challenge.struts.actions.CreateAction">
			<result name="success">/create.jsp</result>
			<result name="error">/create.jsp</result>
		</action>
		
		<action name="listar" method="execute" class="br.com.age.challenge.struts.actions.ReadAction">
			<result name="LISTED">/listar.jsp</result>
		</action>
		
		<action name="delete" class="br.com.age.challenge.struts.actions.DeleteAction">
			<result name="DELETE">/delete.jsp</result>
		</action>
		
		<action name="exame" class="br.com.age.challenge.struts.actions.UpdateAction">
			<result name="EXAME">/update.jsp</result>
		</action>
		
		<action name="update" method="update" class="br.com.age.challenge.struts.actions.UpdateAction">
			<result name="UPDATED" type="redirect">/listar.action</result>
			<result name="error">/update.jsp</result>
		</action>
		
	
	</package>

</struts>